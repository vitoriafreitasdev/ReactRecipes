{
  "version": 2,
  "builds": [
    { "src": "backend/app.js", "use": "@vercel/node" }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "backend/app.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    { 
      "src": "/images/(.*)", 
      "dest": "/public/images/$1" 
    }
  ]
}