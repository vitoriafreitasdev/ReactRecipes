
{
  "version": 2,
  "builds": [
    { "src": "app.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "app.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    { 
      "src": "/images/(.*)", 
      "dest": "public/images/$1"
    },
    {
      "src": "/(.*)",
      "dest": "app.js"
    }
  ]
}